# cloudrun/Dockerfile.dev - For local development with hot reloading
FROM python:3.11-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
  FLASK_ENV=development \
  FLASK_DEBUG=1 \
  PORT=8080

# Set work directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
  build-essential \
  && rm -rf /var/lib/apt/lists/*

# Copy requirements first to leverage Docker cache
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code (we'll mount as volume for live reloading)
COPY . .

# Expose port
EXPOSE 8080

# Run with Flask development server for hot reloading
CMD ["flask", "run", "--host=0.0.0.0", "--port=8080", "--reload"]