{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/auth/callback",
        "function": "callback_handler"
      },
      {
        "source": "/api/auth/init",
        "function": "init_auth_fn"
      },
      {
        "source": "/api/auth/token",
        "function": "token_exchange_fn"
      },
      {
        "source": "/api/projects",
        "function": "get_projects_fn"
      },
      {
        "source": "/api/projects/:projectId",
        "function": "get_project_details_fn"
      },
      {
        "source": "/api/rulesets/new",
        "function": "get_new_ruleset_form_fn"
      },
      {
        "source": "/api/rulesets",
        "function": "create_ruleset_fn"
      },
      {
        "source": "/api/rulesets/:rulesetId",
        "function": "update_ruleset_fn"
      },
      {
        "source": "/api/rulesets/:rulesetId/edit",
        "function": "get_ruleset_fn"
      },
      {
        "source": "/api/rulesets/:rulesetId/share",
        "function": "get_share_dialog_fn"
      },
      {
        "source": "/api/rulesets/:rulesetId/toggle-sharing",
        "function": "toggle_sharing_fn"
      },
      {
        "source": "/api/rulesets/:rulesetId/export",
        "function": "export_ruleset_fn"
      },
      {
        "source": "/api/rulesets/:rulesetId/rules",
        "function": "get_rules_fn"
      },
      {
        "source": "/api/rulesets/:rulesetId/rules/new",
        "function": "get_new_rule_form_fn"
      },
      {
        "source": "/api/rulesets/:rulesetId/rules/:ruleIndex",
        "function": "update_rule_fn"
      },
      {
        "source": "/api/rulesets/:rulesetId/rules/:ruleIndex/edit",
        "function": "get_edit_rule_form_fn"
      },
      {
        "source": "/api/rulesets/:rulesetId/condition-row/:index",
        "function": "get_condition_row_fn"
      },
      {
        "source": "/api/shared-rule-sets/:rulesetId",
        "function": "get_shared_ruleset_fn"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "python311",
    "ignore": [
      ".git",
      ".github",
      ".idea",
      ".vscode",
      ".env",
      ".env.*",
      "**/node_modules/**",
      "**/__pycache__/**",
      "**/.pytest_cache/**",
      "**/venv/**" 
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    }
  }
}